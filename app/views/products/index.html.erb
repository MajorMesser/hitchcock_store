<div id="product_list">
  <table>
    <thead>
        <tr>
          <td>Name</td>
          <td>Image</td>
          <td>Description</td>
          <td>Price</td>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
         <tr>
            <td><%= link_to product.name, product %></td>
            <td><%= image_tag product.image.thumb.url %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
         </tr>
        <% end %>
    <%= paginate @products %>
    <%= page_entries_info @products %>
    </tbody>
  </table>
</div>